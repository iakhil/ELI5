{
    "manifest_version": 2,
    "name": "ELI5 Buddy",
    "version": "1.0",
    "description": "Get simple explanations and create flashcards from complex text",
    "permissions": [
      "activeTab",
      "storage",
      "https://*.firebaseio.com/*",
      "https://*.firebase.com/*",
      "https://*.googleapis.com/*"
    ],
    "content_security_policy": "script-src 'self' https://*.firebaseio.com https://*.firebase.com https://*.googleapis.com; object-src 'self'",
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }