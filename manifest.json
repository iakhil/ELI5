{
    "manifest_version": 3,
    "name": "ELI5 Buddy",
    "version": "1.0",
    "description": "Explains highlighted text like you're five!",
    "permissions": [
      "activeTab",
      "scripting"
    ],
    "host_permissions": [
      "https://api.openai.com/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
}