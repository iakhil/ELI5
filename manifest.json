{
    "manifest_version": 2,
    "name": "ELI5 Buddy",
    "version": "1.0",
    "description": "Explains highlighted text like you're five!",
    "permissions": ["activeTab", "contextMenus", "https://api.openai.com/*", "storage"],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_popup": "popup.html"
    }
  }